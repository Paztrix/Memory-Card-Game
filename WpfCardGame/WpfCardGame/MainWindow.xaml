<Window x:Class="WpfCardGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCardGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Content="Gem Spil" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Margin="0,5,0,0"/>
            <Button Content="Top 10" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Margin="0,5,0,0"/>

            <TextBlock Text="Vælg Spiller" TextAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Margin="0,5,0,0"/>
            <ComboBox x:Name="Players" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Margin="0,0,0,0">
                <ComboBoxItem Content="Spiller" IsSelected="True"/>
            </ComboBox>
        </StackPanel>

        <DataGrid x:Name="playerResults" Grid.Column="1" Margin="0,5,0,0" AutoGenerateColumns="True"/>
    </Grid>
</Window>
